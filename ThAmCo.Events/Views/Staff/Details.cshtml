@model ThAmCo.Events.Models.StaffDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Staff Full Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt>
            Staff Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StaffEmail)
        </dd>
        <dt>
            First Aid Qualified
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstAider)
        </dd>
    </dl>
        <div class="col-md-12">
            @if (Model.Events.Any())
            {
                <hr />
                <h4>Events</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Event Title
                            </th>
                            <th>
                                Event Date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Events)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p><br />@Model.FirstName @Model.Surname Is Not Booked Onto Any Events</p>
            }
            </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StaffID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
